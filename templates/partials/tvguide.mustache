{{#tvguide}}
<section class="tv-guide tv-guide-orig row">
    <div class="small-12 columns">
        <div class="section-bar" data-section-bar>
            <div class="section-icon"><img src="/assets/tv/logo/se.png" />&nbsp;</div>
            <h1 class="heading">TV-guide</h1>
            <nav>
                <a class="tiny button toggle" href="#">Mer</a>
                <ul>
                    <li><a class="small button" href="#">Hele TV-guiden</a></li>
                    <li><a class="small button" href="#">Artikler</a></li>
                    <li><a class="small button" href="#">Serier</a></li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="small-12 medium-6 large-6 columns show-for-medium-up">
        <div class="tvguide-info"></div>
    </div>
    <div class="small-12 medium-6 large-6 columns show-for-medium-up">
        <ul class="tvguide-legend">
            {{#categories}}
                <li><a data-category="{{id}}">{{name}}</a></li>
            {{/categories}}
        </ul>
    </div>
    <div class="small-12 columns show-for-medium-up">
        <div class="tv-guide-slider">
            <input id="tvguide-slider" type="range" min="0" max="23">
            <div class="range-slider-legend">
                <span>06</span>
                <span>07</span>
                <span>08</span>
                <span>09</span>
                <span>10</span>
                <span>11</span>
                <span>12</span>
                <span>13</span>
                <span>14</span>
                <span>15</span>
                <span>16</span>
                <span>17</span>
                <span>18</span>
                <span>19</span>
                <span>20</span>
                <span>21</span>
                <span>22</span>
                <span>23</span>
                <span>00</span>
                <span>01</span>
                <span>02</span>
                <span>03</span>
                <span>04</span>
                <span>05</span>
            </div>
        </div>
    </div>
    {{#channels}}
        <div class="small-12 medium-4 large-4 columns">
            <div class="channel-content" itemscope itemtype="http://schema.org/BroadcastService">
                <div class="channel-header">
                    <img itemprop="image" src="{{image}}"/>
                    <h1 itemprop="name">{{name}}</h1>
                    <a class="hide-for-medium-up"><span class="icon-Arrow-alt-down"></span></a>
                </div>
                <ul class="program-list" data-channel-id="{{id}}">
                    {{#schedule}}
                        {{#tittel}}
                            <li itemscope itemtype="http://schema.org/BroadcastEvent" class="visible" title="{{#omtale}}{{omtale}}{{/omtale}}{{^omtale}}{{tittel}}{{/omtale}}" data-category="{{kategoriid}}" data-tooltip data-show-time="{{date}}">
                                <span itemprop="startDate" content="" class="startDate">{{start}}</span>
                                <span itemprop="name" class="name">{{tittel}}</span>
                                {{rest}}
                            </li>
                        {{/tittel}}
                    {{/schedule}}
                </ul>
            </div>
        </div>
    {{/channels}}
</section>
{{/tvguide}}
