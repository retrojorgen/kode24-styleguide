<link rel="stylesheet" href="//www.se.no/frontend/css/channellogos.css">
{{#tvguide-slim}}
    <section class="tv-guide tv-slim row">
        <div class="small-12 columns guide-header">
            <div class="section-bar" data-section-bar>
                <div class="section-icon"><img src="/assets/tv/logo/se.png"/>&nbsp;</div>
                <h1 class="heading">TV-guide</h1>
                <nav>
                    <a class="tiny button toggle" href="#">Mer</a>
                    <ul>
                        <li><a class="small button" href="#">Hele TV-guiden</a></li>
                        <li><a class="small button" href="#">Artikler</a></li>
                        <li><a class="small button" href="#">Serier</a></li>
                    </ul>
                </nav>
            </div>
        </div>
        {{#channels}}
            <div class="small-12 medium-4 large-4 columns">
                <div class="channel-content" itemscope itemtype="http://schema.org/BroadcastService">
                    <div class="channel-header">
                        <div class="channel-logo-container">
                            <div class="channel channel-{{id}}"></div>
                        </div>
                        <h1 itemprop="name">{{title}}</h1>
                    </div>
                    <ul class="program-list program-list-slim" data-channel-id="{{id}}">
                        {{#schedule}}
                            {{#title}}
                                <li itemscope itemtype="http://schema.org/BroadcastEvent" class="visible"
                                    title="{{#desc}}{{desc}}{{/desc}}{{^desc}}{{title}}{{/desc}}"
                                    data-category="{{genreId}}" data-start-date="{{start}}" data-end-date="{{end}}" data-tooltip data-show-time="">
                                    <span itemprop="startDate" content="" class="startDate"></span>
                                    <span itemprop="name" class="name">{{title}}</span>
                                </li>
                            {{/title}}
                        {{/schedule}}
                    </ul>
                </div>
            </div>
        {{/channels}}
        <div class="small-12 columns">
            <a class="button small expanded sea" title="Se hele TV-guiden på se.no" href="http://www.se.no/tvbeta">Se hele TV-guiden på se.no</a>
        </div>
    </section>
{{/tvguide-slim}}
